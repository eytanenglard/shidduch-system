{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended" // הוספת שורה זו
  ],
  "rules": {
    // החוקים הקיימים שלך נשארים כאן
    "react/prop-types": "off",
    // החוק הזה מגיע מ-plugin:@typescript-eslint/recommended, ניתן לדרוס אותו אם רוצים
    "@typescript-eslint/no-explicit-any": "warn"
  }
}