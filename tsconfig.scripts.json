{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "noEmit": false,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "i18n-config.ts", // <-- הוספנו את הקובץ הזה
    "src/scripts/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app",
    "src/components",
    "src/types",
    "src/middleware.ts"
  ]
}