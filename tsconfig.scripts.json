{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    
    // -- שורות שהוספנו/שינינו --
    "rootDir": ".",
    "composite": true, 
    "noEmit": false, // ודא שזה עדיין כאן

    // -- שורות מהקובץ המקורי שלך שהיו חסרות --
    "module": "CommonJS",
    "moduleResolution": "Node",
    
    // -- שאר ההגדרות נשארות כפי שהן או נורשות --
    "isolatedModules": false,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "./src/lib",
    "./src/scripts",
    "./i18n-config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}