{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "noEmit": false,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "i18n-config.ts",
    "src/scripts/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app",
    "src/components",
    "src/types",
    "src/middleware.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}